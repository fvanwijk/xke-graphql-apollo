{
  "name": "xke-graphql-apollo",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "concurrently 'npm run generate-types' 'npm run dev:rating' 'npm run dev:book'",
    "dev:rating": "npx nodemon --watch 'rating/**/*.*' -e ts,gql --exec 'ts-node' --files -r ./rating/server.ts",
    "dev:book": "npx nodemon --watch 'book/**/*.*' -e ts,gql --exec 'ts-node' --files -r ./book/server.ts",
    "generate-types": "graphql-codegen"
  },
  "author": "Frank van Wijk",
  "license": "ISC",
  "dependencies": {
    "apollo-server": "2.21.0",
    "graphql": "15.5.0",
    "graphql-import-node": "0.0.4"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.21.1",
    "@graphql-codegen/typescript": "1.21.0",
    "@graphql-codegen/typescript-operations": "1.17.14",
    "@graphql-codegen/typescript-resolvers": "1.18.2",
    "concurrently": "6.0.0",
    "ts-node": "9.1.1",
    "typescript": "4.2.2"
  }
}
